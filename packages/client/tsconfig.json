{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],
      "@env": ["env.ts"],
      "@libs": ["libs"],
      "@libs/*": ["libs/*"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@icons": ["icons"],
      "@icons/*": ["icons/*"]
    },
    "baseUrl": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "files": ["./hardhat.config.ts"],
  "include": [
    "./scripts",
    "./test",
    "./typechain",
    "src"
  ]
}
